<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="5dp" android:top="0dp">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:angle="45"
                android:startColor="#8008c3fa"
                android:endColor="#8008c3fa"
                android:type="linear"
                />
        </shape>
    </item>
    <item android:bottom="40dp" android:left="42dp" android:right="40dp" android:top="40dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp"/>
            <gradient
                android:angle="90"
                android:centerX="50%"
                android:centerColor="@color/trans_parent"
                android:startColor="#8008c3fa"
                android:endColor="#8008c3fa"
                android:type="linear"
                />
        </shape>
    </item>
</layer-list>
